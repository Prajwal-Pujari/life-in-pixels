# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pixel_calendar

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret
SESSION_SECRET=your-session-secret-change-this

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Telegram Bot Configuration (Optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# To enable Telegram reports:
# 1. Create a bot with @BotFather on Telegram
# 2. Get your bot token
# 3. Add bot to your group/channel
# 4. Get chat ID from https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
# 5. Set TELEGRAM_ENABLED=true
# 6. Paste your token and chat ID above
